{
  "name": "easy-demo-importer",
  "version": "1.0.0",
  "description": "A one-click, user-friendly WordPress plugin for effortlessly importing theme demos and customizing your website in no time.",
  "main": "index.js",
  "keywords": ["WordPress", "Demo Importer", "One Click", "One Click Demo Importer", "Theme Demo Importer", "WordPress Importer"],
  "author": "SM Rafiz",
  "license": "GPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/wp-sigmadevs/easy-demo-importer"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-react": "^7.18.6",
    "@wordpress/eslint-plugin": "^14.6.0",
    "@wordpress/prettier-config": "^2.16.0",
    "archiver": "^5.3.1",
    "cli-color": "^2.0.3",
    "emojic": "^1.1.17",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "laravel-mix": "^6.0.49",
    "postcss": "^8.4.23",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.6.1",
    "stylelint-scss": "^5.0.0",
    "wp-pot": "^1.10.2"
  },
  "scripts": {
    "test": "echo \"No test specified\"",
    "prod": "webpack --env NODE_ENV=production --env production",
    "prod:watch": "webpack --env NODE_ENV=production --env production --watch",
    "dev": "webpack --env NODE_ENV=development",
    "zip": "npm run prod && webpack --env NODE_ENV=distribution",
    "dev:watch": "webpack --env NODE_ENV=development --watch",
    "eslint": "eslint src/js/**/*.js",
    "eslint:fix": "eslint src/js/**/*.js --fix",
    "stylelint": "stylelint src/**/**/*.{css,scss,pcss}",
    "stylelint:fix": "stylelint src/**/**/*.{css,scss,pcss} --fix",
    "prettier": "prettier src/js/**/*.js",
    "prettier:fix": "prettier --write src/js/**/*.js",
    "translate": "wp-pot --src '**/**/**/*.php' --dest-file 'languages/easy-demo-importer.pot' --package 'easy-demo-importer' --domain 'easy-demo-importer' --last-translator 'SM Rafiz <s.m.rafiz@gmail.com>' --team 'SM Rafiz <s.m.rafiz@gmail.com>' --bug-report 'https://github.com/wp-sigmadevs/easy-demo-importer/issues'"
  },
  "eslintConfig": {
    "extends": [
      "./.eslintrc.js"
    ]
  },
  "prettier": "./.prettierrc.js",
  "stylelint": {
    "ignoreFiles": [
      "./assets/**/*.css",
      "./vendor/**/**/*.css",
      "./node_modules/**/**/*.css",
      "./tests/**/**/*.css",
      "./dist/**/**/*.css"
    ],
    "extends": [
      "./.stylelintrc.js"
    ]
  }
}
